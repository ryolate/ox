{
    "compilerOptions": {
        "lib": [
            "esnext",
            "dom"
        ],
        "jsx": "react",
        // Transpile to commonjs code; nodejs assumes it by default.
        // Still we can use ES6 import/export in the TS code.
        "module": "commonjs",
        "target": "esnext",
        /* Defalut flags */
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}